generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  type     String // superAdmin | admin | support

  @@map("users")
}

model Cause {
  id           String    @id @map("_id") @db.ObjectId
  title        String
  description  String
  email        String
  contact      String
  createAt     DateTime
  expirationAt DateTime?
  location     String

  @@map("causes")
}
